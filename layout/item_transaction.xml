<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/textNameTransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donut Name"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textHargaTransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 15.000"
            android:layout_below="@id/textNameTransaksi"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="18sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/textQtyTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textSize="18sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonHapusTransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_below="@id/textHargaTransaksi"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
